@model Studievereniging.Models.Activity

@{
    ViewData["Title"] = "Activity Details";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Activities</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" class="card-img-top" alt="@Model.Name" style="height: 300px; object-fit: cover;">
                }
                <div class="card-body">
                    <h1 class="card-title mb-4">@Model.Name</h1>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                                <span>@Model.Location</span>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-calendar-event text-primary me-2"></i>
                                <span>@Model.StartDate.ToString("dd MMMM yyyy")</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-clock text-primary me-2"></i>
                                <span>@Model.StartDate.ToString("HH:mm") - @Model.EndDate.ToString("HH:mm")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            @if (Model.Price.HasValue)
                            {
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-tag-fill text-primary me-2"></i>
                                    <span>@Model.Price.Value.ToString("C")</span>
                                </div>
                            }
                            @if (Model.MaxParticipants.HasValue)
                            {
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-people-fill text-primary me-2"></i>
                                    <span>@Model.Participants.Count/@Model.MaxParticipants spots filled</span>
                                </div>
                            }
                            @if (Model.RegistrationDeadline.HasValue)
                            {
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-hourglass-split text-primary me-2"></i>
                                    <span>Register before @Model.RegistrationDeadline.Value.ToString("dd MMM yyyy")</span>
                                </div>
                            }
                        </div>
                    </div>

                    @if (Model.Category != null)
                    {
                        <div class="mb-4">
                            <span class="badge bg-primary rounded-pill">@Model.Category</span>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil me-2"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="bi bi-trash me-2"></i>Delete
                            </a>
                        </div>
                        <button class="btn btn-primary rounded-pill px-4">
                            <i class="bi bi-person-plus me-2"></i>Join Activity
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-person-circle me-2"></i>Organizer
                    </h5>
                    <p class="card-text">
                        @(Model.Admin?.Name ?? "No organizer assigned")
                    </p>
                </div>
            </div>

            @if (Model.Participants.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-people me-2"></i>Participants
                        </h5>
                        <div class="list-group list-group-flush">
                            @foreach (var participant in Model.Participants)
                            {
                                <div class="list-group-item d-flex align-items-center">
                                    <i class="bi bi-person-circle me-2"></i>
                                    @participant.Name
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        border: none;
    }

    .badge {
        padding: 8px 16px;
    }

    .list-group-item {
        border: none;
        padding: 0.5rem 0;
    }

    .btn-group .btn {
        border-radius: 0;
    }

    .btn-group .btn:first-child {
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
    }

    .btn-group .btn:last-child {
        border-top-right-radius: 8px;
        border-bottom-right-radius: 8px;
    }
</style>
