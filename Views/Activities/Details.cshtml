@model Studievereniging.Models.Activity

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Activities</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" class="img-fluid rounded shadow-sm mb-4" alt="@Model.Name">
            }
             
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h1 class="card-title display-5 mb-4">@Model.Name</h1>
                    
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-geo-alt fs-4 me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted d-block">Location</small>
                                    <strong>@Model.Location</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-event fs-4 me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted d-block">Date & Time</small>
                                    <strong>@Model.StartDate.ToString("dd MMM yyyy HH:mm")</strong>
                                </div>
                            </div>
                        </div>
                        @if (Model.Price.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-tag fs-4 me-2 text-primary"></i>
                                    <div>
                                        <small class="text-muted d-block">Price</small>
                                        <strong>@(Model.Price > 0 ? $"â‚¬{Model.Price}" : "Free")</strong>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (Model.MaxParticipants.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-people fs-4 me-2 text-primary"></i>
                                    <div>
                                        <small class="text-muted d-block">Participants</small>
                                        <strong>@Model.Participants.Count / @Model.MaxParticipants</strong>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (Model.RegistrationDeadline.HasValue)
                    {
                        var daysLeft = (Model.RegistrationDeadline.Value - DateTime.Now).Days;
                        <div class="alert @(daysLeft < 3 ? "alert-danger" : "alert-info")">
                            <i class="bi bi-clock me-2"></i>
                            @(daysLeft > 0 
                                ? $"Registration deadline: {Model.RegistrationDeadline.Value:dd MMM yyyy} ({daysLeft} days left)" 
                                : "Registration closed")
                        </div>
                    }
                </div>
            </div>

            @if (Model.Organisers.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Organizers</h5>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var organizer in Model.Organisers)
                            {
                                <div class="d-flex align-items-center bg-light rounded p-2">
                                    <i class="bi bi-person-circle me-2"></i>
                                    <span>@organizer.Name</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Actions</h5>
                    <div class="d-grid gap-2">
                        @{
                            // TODO: Replace with actual logged-in user ID
                            var userId = 1;
                            var isParticipant = Model.Participants.Any(p => p.Id == userId);
                            var isFull = Model.MaxParticipants.HasValue && Model.Participants.Count >= Model.MaxParticipants.Value;
                            var isDeadlinePassed = Model.RegistrationDeadline.HasValue && Model.RegistrationDeadline.Value < DateTime.Now;
                        }

                        @if (!isParticipant)
                        {
                            <form asp-action="JoinActivity" asp-route-id="@Model.Id" method="post">
                                <button type="submit" class="btn btn-primary w-100" 
                                        @(isFull || isDeadlinePassed ? "disabled" : "")>
                                    <i class="bi bi-person-plus"></i> Join Activity
                                </button>
                            </form>
                            @if (isFull)
                            {
                                <div class="alert alert-warning py-2 mb-0">
                                    <small><i class="bi bi-exclamation-triangle"></i> This activity is full</small>
                                </div>
                            }
                            @if (isDeadlinePassed)
                            {
                                <div class="alert alert-danger py-2 mb-0">
                                    <small><i class="bi bi-clock"></i> Registration deadline has passed</small>
                                </div>
                            }
                        }
                        else
                        {
                            <form asp-action="LeaveActivity" asp-route-id="@Model.Id" method="post">
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-person-dash"></i> Leave Activity
                                </button>
                            </form>
                        }

                        <div class="btn-group w-100">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-pencil"></i> Edit Activity
                            </a>
                            <button type="button" class="btn btn-outline-danger" 
                                    onclick="confirmDelete(@Model.Id, '@Model.Name')">
                                <i class="bi bi-trash"></i> Delete Activity
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Participants.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Participants (@Model.Participants.Count)</h5>
                        <div class="list-group list-group-flush">
                            @foreach (var participant in Model.Participants)
                            {
                                <div class="list-group-item d-flex align-items-center">
                                    <i class="bi bi-person-circle me-2"></i>
                                    <span>@participant.Name</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bevestig Verwijdering</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Weet je zeker dat je <span id="deleteActivityName" class="fw-bold"></span> wilt verwijderen?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" name="id" id="deleteActivityId" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Verwijderen</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            document.getElementById('deleteActivityId').value = id;
            document.getElementById('deleteActivityName').textContent = name;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
