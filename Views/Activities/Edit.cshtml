@model Studievereniging.Models.ViewModels.ActivityViewModel

@{
    ViewData["Title"] = "Edit Activity";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Activities</a></li>
            <li class="breadcrumb-item active">Edit @Model.Name</li>
        </ol>
    </nav>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        
        <partial name="_ActivityForm" model="Model" />

        <div class="row mt-4">
            <div class="col-md-8">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
