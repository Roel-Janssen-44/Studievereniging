@model Studievereniging.Models.ViewModels.ActivityViewModel

@{
    ViewData["Title"] = $"Bewerk {Model.Name} - Victuz";
}

<div class="hero rounded-5 mb-4">
    <div class="container hero-content">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-3">
                        <li class="breadcrumb-item"><a class="text-white" asp-action="Index">Activiteiten</a></li>
                        <li class="breadcrumb-item active text-white" aria-current="page">Bewerk @Model.Name</li>
                    </ol>
                </nav>
                <h1 class="display-4 fw-bold mb-3">Activiteit Bewerken</h1>
                <p class="lead mb-0">
                    Pas de details van deze activiteit aan.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        
        <partial name="_ActivityForm" model="Model" />

        <div class="row mt-4">
            <div class="col-md-8">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Wijzigingen Opslaan
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Annuleren
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
