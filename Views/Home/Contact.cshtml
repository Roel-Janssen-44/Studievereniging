@{
    ViewData["Title"] = "Contact - Victuz";
}

<!-- Hero Section -->
<div class="hero rounded-5 mb-4">
    <div class="container hero-content rounded-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">Neem contact op met Victuz</h1>
                <p class="lead mb-4">
                    Heb je vragen? Neem contact op met ons team en we helpen je graag verder!
                </p>
            </div>
            <div class="col-lg-6 text-center">
                <img src="/IMG/VictuzLogo.png" alt="Victuz Logo" class="img-fluid" style="max-height: 300px;">
            </div>
        </div>
    </div>
</div>

<!-- Contact Information and Form -->
<div class="container mt-4">
    <div class="row g-4 justify-content-center">
        <!-- Contact Information -->
        <div class="col-lg-5 mx-auto">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center text-center" style="padding: 2rem;">
                    <h5 class="card-title mb-4">Contact Informatie</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="bi bi-envelope text-primary"></i> <strong>Email:</strong> info@victuz.nl
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-geo-alt text-primary"></i> <strong>Adres:</strong><br>
                            Zuyd Hogeschool Heerlen<br>
                            Nieuw Eyckholt 300, 6419 DJ Heerlen<br>
                            Nederland
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-telephone text-primary"></i> <strong>Telefoon:</strong> +31 (0)20 123 4567
                        </li>
                        <li>
                            <i class="bi bi-person text-primary"></i> <strong>Contactpersoon:</strong> Miel Noelanders
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Contact Form using Web3Forms -->
        <div class="col-lg-5 mx-auto">
            <div class="card h-100 shadow-sm">
                <div class="card-body px-4 py-5">
                    <h5 class="card-title mb-4 text-center">Stuur ons een bericht</h5>
                    <form action="https://api.web3forms.com/submit" method="POST">
                        <!-- Replace with your Access Key -->
                        <input type="hidden" name="access_key" value="26e791cd-1dca-4b0a-a927-f8872806a206">

                        <!-- Form Inputs -->
                        <div class="form-group mb-3">
                            <label for="name">Naam:</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="message">Bericht:</label>
                            <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                        </div>

                        <!-- Honeypot Spam Protection -->
                        <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-lg w-100">Verstuur</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>