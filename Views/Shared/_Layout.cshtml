<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Victuz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <style>
        /* Definieer kleurvariabelen */
        :root {
            --primary-color: #178994;
            --secondary-color: #146471;
            --accent-color: #D1AF7B;
            --text-color-light: #ffffff;
            --text-color-muted: #6c757d;
        }

        /* Stijlen voor de navbar */
        .navbar {
            background-color: var(--primary-color);
        }
        .navbar-brand, .nav-link {
            color: var(--text-color-light) !important;
        }
        .nav-link:hover, .nav-link:focus {
            color: var(--accent-color) !important;
        }
        .navbar-toggler-icon {
            background-color: var(--text-color-light);
        }

        /* Dropdown menu */
        .dropdown-menu {
            background-color: var(--secondary-color);
        }
        .dropdown-item {
            color: var(--text-color-light);
        }
        .dropdown-item:hover, .dropdown-item:focus {
            background-color: var(--accent-color);
            color: var(--text-color-light);
        }

        /* Stijlen voor knoppen */
        .btn-primary {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
            color: var(--text-color-light);
        }
        .btn-primary:hover {
            background-color: lighten(var(--secondary-color), 10%);
            color: var(--text-color-light);
        }
        .btn-outline-primary {
            color: var(--secondary-color);
            border-color: var(--secondary-color);
        }
        .btn-outline-primary:hover {
            background-color: var(--secondary-color);
            color: var(--text-color-light);
        }

        /* Footer stijlen */
        .footer {
            background-color: var(--primary-color);
            color: var(--text-color-light);
        }
        .footer .text-muted {
            color: var(--accent-color) !important;
        }
        .footer a {
            color: var(--text-color-light);
        }
        .footer a:hover {
            color: var(--accent-color);
        }

        /* Content wrapper */
        .content-wrapper {
            padding-top: 76px; /* Afhankelijk van de hoogte van de navbar */
            min-height: calc(100vh - 60px); /* Afhankelijk van de hoogte van de footer */
        }

        /* Animatie voor dropdown-menu */
        .dropdown-menu-animated {
            animation: dropdownFade 0.3s ease;
        }
        @@keyframes dropdownFade {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <header class="fixed-top">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/invictus-logo.png" alt="Invictus" height="40" class="me-2">
                    <span class="brand-text">Invictus</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-calendar-event"></i> Activiteiten
                            </a>
                            <ul class="dropdown-menu dropdown-menu-animated">
                                <li>
                                    <a class="dropdown-item" asp-controller="Activities" asp-action="Index">
                                        <i class="bi bi-list"></i> Alle Activiteiten
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Activities" asp-action="Create">
                                        <i class="bi bi-plus-lg"></i> Nieuwe Activiteit
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="bi bi-person-check"></i> Mijn Activiteiten
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-shop"></i> Producten
                            </a>
                            <ul class="dropdown-menu dropdown-menu-animated">
                                <li>
                                    <a class="dropdown-item" asp-controller="Products" asp-action="Index">
                                        <i class="bi bi-grid"></i> Alle Producten
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Products" asp-action="Create">
                                        <i class="bi bi-plus-lg"></i> Nieuw Product
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-cart3"></i> Bestellingen
                            </a>
                            <ul class="dropdown-menu dropdown-menu-animated">
                                <li>
                                    <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                                        <i class="bi bi-list-ul"></i> Alle Bestellingen
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="bi bi-person-check"></i> Mijn Bestellingen
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">
                                <i class="bi bi-envelope"></i> Contact
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-animated">
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="bi bi-person"></i> Mijn Profiel
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="bi bi-box-arrow-right"></i> Uitloggen
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
        <!-- Footer -->
        <footer class="footer mt-auto py-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5 class="mb-3">Invictus</h5>
                        <p class="text-muted small">
                            Jouw studievereniging voor een onvergetelijke studietijd.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h5 class="mb-3">Contact</h5>
                        <ul class="list-unstyled text-muted small">
                            <li><i class="bi bi-envelope me-2"></i> info@invictus.nl</li>
                            <li><i class="bi bi-geo-alt me-2"></i> Amsterdam, Nederland</li>
                            <li><i class="bi bi-telephone me-2"></i> +31 (0)20 123 4567</li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h5 class="mb-3">Volg Ons</h5>
                        <div class="d-flex gap-2">
                            <a href="#" class="text-muted"><i class="bi bi-instagram fs-5"></i></a>
                            <a href="#" class="text-muted"><i class="bi bi-facebook fs-5"></i></a>
                            <a href="#" class="text-muted"><i class="bi bi-linkedin fs-5"></i></a>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="text-center text-muted small">
                    &copy; @DateTime.Now.Year Invictus. Alle rechten voorbehouden.
                </div>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
