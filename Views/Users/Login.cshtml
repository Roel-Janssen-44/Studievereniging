@model Studievereniging.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login - Victuz";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="text-center mb-4">Login</h2>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <p>Don't have an account? <a asp-action="Register">Register here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-primary shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-4 text-primary">
                        🌟 Waarom lid worden van Victuz? 🌟
                    </h3>
                    <ul class="list-group">
                        <li class="list-group-item d-flex align-items-center">
                            <span class="me-2 text-success">✅</span>
                            <strong>Voorang op niet-leden:</strong>
                            <span class="ms-2 text-muted">Exclusieve toegang tot activiteiten voordat deze openbaar worden.</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <span class="me-2 text-warning">💸</span>
                            <strong>Korting:</strong>
                            <span class="ms-2 text-muted">Profiteer van kortingen op deelnamekosten en merchandise.</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <span class="me-2 text-info">🎉</span>
                            <strong>Exclusieve evenementen:</strong>
                            <span class="ms-2 text-muted">Toegang tot leden-only workshops, borrels en feesten.</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <span class="me-2 text-primary">💡</span>
                            <strong>Jouw stem telt:</strong>
                            <span class="ms-2 text-muted">Draag suggesties aan en denk mee over activiteiten.</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <span class="me-2 text-danger">🛍️</span>
                            <strong>Toegang tot de shop:</strong>
                            <span class="ms-2 text-muted">Exclusieve toegang tot de unieke ledenwinkel.</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
