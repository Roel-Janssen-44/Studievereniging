@model IEnumerable<Studievereniging.Models.User>

@{
    ViewData["Title"] = "Gebruikers - Invictus";
}

<div class="hero rounded-5 mb-4">
    <div class="container hero-content">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">Gebruikersbeheer</h1>
                <p class="lead mb-4">
                    Beheer alle gebruikers van Invictus. Bekijk en bewerk rollen en gegevens.
                </p>
                @if (User?.IsInRole(Role.Admin) == true)
                {
                    <a asp-action="Create" class="btn btn-light btn-lg">
                        <i class="bi bi-person-plus"></i> Nieuwe Gebruiker
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="card shadow-sm animate-card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="input-group" style="max-width: 300px;">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" id="searchUsers" 
                           placeholder="Zoek gebruikers...">
                </div>
                <div class="btn-group">
                    <button class="btn btn-outline-primary" onclick="filterUsers('all')">Alle</button>
                    <button class="btn btn-outline-primary" onclick="filterUsers('Admin')">Admins</button>
                    <button class="btn btn-outline-primary" onclick="filterUsers('Member')">Leden</button>
                    <button class="btn btn-outline-primary" onclick="filterUsers('BoardMember')">Bestuur</button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" style="width: 50px;"></th>
                            <th scope="col">Naam</th>
                            <th scope="col">Rol</th>
                            <th scope="col">Activiteiten</th>
                            <th scope="col" style="width: 150px;">Acties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="user-row" data-role="@item.Role">
                                <td>
                                    <div class="avatar">
                                        <i class="bi bi-person-circle fs-4"></i>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-semibold">@item.Name</div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill 
                                        @(item.Role switch {
                                            "Admin" => "bg-danger",
                                            "BoardMember" => "bg-primary",
                                            "Member" => "bg-success",
                                            _ => "bg-secondary"
                                        })">
                                        @item.Role
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar-event"></i> @item.ParticipantActivities.Count activiteiten
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                onclick="confirmDelete(@item.Id, '@item.Name')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bevestig Verwijdering</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Weet je zeker dat je <span id="deleteUserName" class="fw-bold"></span> wilt verwijderen?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
                <form id="deleteForm" asp-action="Delete" method="post" style="display: inline;">
                    <input type="hidden" name="id" id="deleteUserId" />
                    <button type="submit" class="btn btn-danger">Verwijderen</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchUsers').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            document.querySelectorAll('.user-row').forEach(row => {
                const name = row.querySelector('.fw-semibold').textContent.toLowerCase();
                const role = row.querySelector('.badge').textContent.toLowerCase();
                if (name.includes(searchTerm) || role.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Filter functionality
        function filterUsers(role) {
            document.querySelectorAll('.user-row').forEach(row => {
                if (role === 'all' || row.dataset.role === role) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        // Delete confirmation
        function confirmDelete(id, name) {
            document.getElementById('deleteUserId').value = id;
            document.getElementById('deleteUserName').textContent = name;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
