@model Studievereniging.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                    <h2 class="card-title mt-3">Delete Product</h2>
                    <p class="text-muted mb-4">Are you sure you want to delete "@Model.Name"?</p>

                    <div class="row mb-3">
                        <div class="col-sm-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">Price</h6>
                                    <p class="card-text">â‚¬@Model.Price.ToString("F2")</p>
                                </div>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <div class="col-sm-6">
                                <img src="@Model.Image" class="img-thumbnail" alt="@Model.Name" style="max-height: 100px;">
                            </div>
                        }
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="btn-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
